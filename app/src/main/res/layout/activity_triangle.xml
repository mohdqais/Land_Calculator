<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TriangleActivity">

    <ImageView
        android:id="@+id/image_front1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/land"
        android:layout_marginTop="10dp"/>


    <RelativeLayout
        android:id="@+id/relative11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/image_front1"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/side_a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Side A : "
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            />

        <EditText
            android:id="@+id/edit_a1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_marginLeft="100dp"
            android:inputType="text"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/relative11">

        <TextView
            android:id="@+id/side_b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Side B : "
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            />

        <EditText
            android:id="@+id/edit_b1"
            android:layout_width="100dp"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:inputType="text"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/relative21">

        <TextView
            android:id="@+id/side_c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Side C : "
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            />

        <EditText
            android:id="@+id/edit_c1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_marginLeft="100dp"
            android:inputType="text"
            android:textStyle="bold" />
    </RelativeLayout>



    <Button
        android:id="@+id/calculate_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="add"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/relative31"
        android:background="@drawable/input_design"/>


        <TextView
            android:id="@+id/result1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:background="@drawable/button"
            android:layout_below="@+id/calculate_btn1"
            />



    <RelativeLayout
        android:id="@+id/relative61"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/result1">

        <TextView
            android:id="@+id/area1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area :  "
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/txt_area1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/area_mtr1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginRight="15dp"
            android:textAlignment="center"
            android:layout_below="@+id/txt_area1"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative71"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/relative61">

        <TextView
            android:id="@+id/ghzs1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghz :   "
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/ghz_area1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            android:textAlignment="center"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative81"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/relative71">

        <TextView
            android:id="@+id/bisee_area1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bese :  "
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/bisec_area1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            android:textAlignment="center"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/chck_formula1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="230dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/image_front1"
        android:src="@drawable/tri_image"/>


    <TextView
        android:id="@+id/txt_back_btn1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Back !"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/input_design"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>



</RelativeLayout>